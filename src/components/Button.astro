---
type Props = {
  link: string;
  title: string;
};
const { link, title } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="px-2 py-1 rounded-full transition-background items-center justify-center border border-gray-800 bg-gradient-to-r from-transparent via-white/5 to-[#3D2F0D] bg-[length:200%_200%] bg-[0%_0%] duration-300 hover:bg-[100%_200%] focus:outline-none"
  >{title}</a
>
