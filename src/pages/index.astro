---
import Layout from "../layouts/Layout.astro";
import Hero from "@components/Hero.astro";
import About from "@components/About.astro";
import Characteristics from "@components/Characteristics.astro";
import Characters from "@components/Characters.astro";
import Sponsor from "@components/Sponsor.astro";
import Footer from "@components/Footer.astro";

import AboutData from "src/data/about.json";

type About = {
  name: string;
  description: string;
};

const about: About = AboutData;
---

<Layout
  title={about.name}
  description={about.description}
  image={`${import.meta.env.SITE}/src/assets/og/main.png`}
>
  <Hero />
  <About />
  <Characteristics />
  <Characters />
  <Sponsor />
  <Footer />
</Layout>
